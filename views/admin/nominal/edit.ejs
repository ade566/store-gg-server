<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Edit Nominal</h3>
            </div>
            <form method="post" action="/nominal/_edit/<%= e._id %>?_method=PUT">
              <div class="card-body">
                <div class="form-group">
                  <div class="form-group">
                    <label>Nama Koin <%= e.coinName %> </label>
                    <select class="form-control select2" style="width: 100%;" name="coinName" required>
                      <option selected="selected">Pilih Koin</option>
                      <option <% if(e.coinName === 'Gold') { %> selected <% } %> >Gold</option>
                      <option <% if(e.coinName === 'Diamond') { %> selected <% } %> >Diamond</option>
                      <option <% if(e.coinName === 'Jewel') { %> selected <% } %> >Jewel</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input type="number" min="1 " class="form-control" name="coinQuantity" id="coinQuantity" placeholder="Jumlah koin" value="<%= e.coinQuantity %>">
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input type="number" min="1 " class="form-control" name="price" id="price" placeholder="Harga" value="<%= e.price %>">
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>